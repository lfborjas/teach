<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Challenge</th>
    <th>Do eval</th>
    <th>Expected result</th>
    <th>Ordering</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.content %></td>
    <td><%= task.challenge_id %></td>
    <td><%= task.do_eval %></td>
    <td><%= task.expected_result %></td>
    <td><%= task.ordering %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


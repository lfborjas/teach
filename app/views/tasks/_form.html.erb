<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :challenge_id %>
    <%= f.input :do_eval %>
    <%= f.input :expected_result %>
    <%= f.input :ordering %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

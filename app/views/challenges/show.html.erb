<h1>/Challenge</h1>

<p>
  <b>Title</b><br>
  <%= @challenge.title %>
</p>

<p>
  <b>Slug</b><br>
  <%= @challenge.slug %>
</p>

<div class="form-actions">
  <%= link_to 'Back', challenges_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_challenge_path(@challenge), :class => 'btn' %>
  <%= link_to 'Delete', challenge_path(@challenge), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
